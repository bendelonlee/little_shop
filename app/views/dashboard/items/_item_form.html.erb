<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :description %>
<%= f.text_area :description %>
<%= f.label :image %>
<% real_image = @item.image == "/default_image.jpg" ? "" : @item.image %>
<%= f.url_field :image, value: real_image %>
<%= f.label :price %>
<%= f.number_field :price, in: 0.01..2000000.0, step: 0.01 %>
<%= f.label :instock_qty %>
<%= f.number_field :instock_qty, in: 0..2000000, step: 1%>
<%= f.submit %>
