<div id="item-index-statistics">
  <span class="dropdown"><h2>Statistics</h2>
  <div class="dropdown-content">
    <div class="flex-container">
      <span id="most-popular-items">
        <h5>5 Most Popular Items</h5>
        <ol>
          <% @top_5_items.each do |item| %>
            <li><%= link_to(item.name.titleize, item_path(item)) %> (<%= item.units_sold %> units sold)</li>
          <% end %>
        </ol>
      </span>
      <span id="least-popular-items">
        <h5>5 Least Popular Items</h5>
        <ol>
          <% @bottom_5_items.each do |item| %>
            <li><%= link_to(item.name.titleize, item_path(item)) %> (<%= item.units_sold %> units sold)</li>
          <% end %>
        </ol>
      </span>
    </div>
  </div>
</div>


<div class="flex-container">
  <% @items.each do |item| %>
    <div id="item-<%= item.id %>" class="inner-flex shadow">
      <%= link_to image_tag(item.image, class: :thumb, onerror: 'this.src="/default_image.jpg"'), item_path(item)%>
      <h4><%= link_to(item.name.titleize, item_path(item)) %></h4>
      <ul>
        <li><b>Sold by:</b> <%= item.user.name.titleize %> </li>
        <li><b>In Stock:</b> <%= item.instock_qty %> items</li>
        <li><b>Price:</b> <%= number_to_currency(item.price) %></li>
        <li><%= item.description %></li>
      </ul>
    </div>
  <% end %>
</div>
